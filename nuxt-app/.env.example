# Application
NODE_ENV=development
APP_URL=http://localhost:3001
PORT=3001

# Database (Required)
DATABASE_URL=postgresql://user:password@localhost:5432/jira_slack_integration

# Jira Integration (Required)
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token

# Slack Integration (Optional)
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_USER_TOKEN=xoxp-your-user-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
SLACK_CHANNEL_ID=C12345678

# AI Integration (Optional)
AI_PROVIDER=groq
GROQ_API_KEY=your-groq-api-key
OPENAI_API_KEY=your-openai-api-key

# Scheduler
SCHEDULE_ENABLED=false

# Security
CHALLENGE_JWT_SECRET=your-secure-jwt-secret-min-32-chars
INTERNAL_API_SECRET=your-internal-api-secret

# Logging
LOG_LEVEL=info
